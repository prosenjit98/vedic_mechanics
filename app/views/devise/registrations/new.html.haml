= turbo_frame_tag "sign_up_form" do 
  %div{"data-controller" => "global-modal"}
    .overflow-y-auto.overflow-x-hidden.fixed.top-0.right-0.left-0.z-50.justify-center.items-center.w-full.md:inset-0.max-h-full{"aria-hidden" => "true", tabindex: "-1" , style:"background-color: rgba(0,0,0,0.6)", "data-global-modal-target" => "output"}
      .absolute.p-4.w-full.max-w-lg.max-h-full{style: "top: 50%; left: 50%; transform: translate(-50%, -50%);"}
        .relative.bg-white.rounded-lg.shadow
          .flex.items-center.justify-between.p-4.md:p-5.border-b.rounded-t
            %h3.text-xl.font-semibold.text-gray-900
              Create Account
            %button.text-gray-400.bg-transparent.hover:bg-gray-200.hover:text-gray-900.rounded-lg.text-sm.w-8.h-8.ms-auto.inline-flex.justify-center.items-center.end-2.5{data: {action: "global-modal#close"}, type: "button"}
              %svg.w-3.h-3{"aria-hidden" => "true", fill: "none", viewbox: "0 0 14 14", xmlns: "http://www.w3.org/2000/svg"}
                %path{d: "m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6", stroke: "currentColor", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
              %span.sr-only Close modal
          .p-4.md:p-5
            .space-y-4
              = form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f|
                .grid.grid-cols-2.gap-2
                  %div
                    = f.label :first_name, class: "block mb-2 text-sm font-medium text-gray-900"
                    = f.text_field :first_name,autofocus: true, autocomplete: "first_name", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5"
                  %div 
                    = f.label :last_name,class: "block mb-2 text-sm font-medium text-gray-900"
                    = f.text_field :last_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5"
                %div 
                  = f.label :phone_number,class: "block mb-2 text-sm font-medium text-gray-900"
                  = f.text_field :phone_number,class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5", placeholder: "9932235011", required: true
                %div
                  = f.label :email, class: "block mb-2 text-sm font-medium text-gray-900"
                  = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "name@company.com",required: "", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5"
                %div
                  = f.label :password, class: "block mb-2 text-sm font-medium text-gray-900"
                  = f.password_field :password, autocomplete: "current-password", required: "", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5"
                %div 
                  = f.label :password_confirmation
                  = f.password_field :password_confirmation, autocomplete: "new-password",class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5"
                %button.w-full.text-white.bg-blue-700.hover:bg-blue-800.focus:ring-4.focus:outline-none.focus:ring-blue-300.font-medium.rounded-lg.text-sm.px-5.my-4.text-center{class: "py-2.5", type: "submit"} Save
              