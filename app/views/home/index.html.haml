%section#contact.py-16.form-section.bg-white.dark:bg-gray-900
  .max-w-screen-xl.mx-auto.px-4.flex.flex-col.md:flex-row.items-center.text-gray-900.dark:text-gray-100
    .mb-8.md:mb-0.text-center.md:text-left{class: "md:w-1/2"}
      %h2.text-2xl.font-bold.mb-4.text-gray-900.text-white Have any questions?
      %h3.text-4xl.font-bold.mb-4.text-gray-900.text-white Contact us.
      %p.text-lg.mb-4.text-gray-500.dark:text-gray-300 Want to understand more about Spirulina Products?
      %p.text-lg.text-gray-500.dark:text-gray-300 Get in touch with us and one of our experts will reach out to you.
    %div{class: "md:w-1/2"}
      = turbo_frame_tag "contact_form" do
        = form_with model: @contact do |f|
          %div
            = f.label :name, class: "text-lg text-gray-900.dark:text-white" do 
              Name
              %span.required *
            = f.text_field :name, required: true, class: "mt-1 p-3 block w-full rounded-md shadow-sm focus:border-green-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          %div
            = f.label :email, class: "text-lg text-gray-900.dark:text-white" do
              Email
              %span.required *
            = f.email_field :email, required: true, class: "mt-1 p-3 block w-full rounded-md shadow-sm focus:border-green-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          %div
            = f.label :message, class: "text-lg text-gray-900.dark:text-white" do
              Message
              %span.required *
            = f.text_area :message, required: true, class: "mt-1 p-3 block w-full rounded-md shadow-sm focus:border-green-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          .text-center.md:text-left
            = f.submit "Send Message", class: "mt-4 inline-block bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-full shadow-lg focus:outline-none focus:ring focus:ring-blue-200 focus:ring-opacity-50"
