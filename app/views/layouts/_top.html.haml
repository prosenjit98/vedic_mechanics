      %ul.flex.flex-col.font-medium.p-4.md:p-0.mt-4.border.border-gray-100.rounded-lg.bg-gray-50.md:space-x-4.rtl:space-x-reverse.md:flex-row.md:mt-0.md:border-0.primary-bg
        = active_link_to "Home", root_path, active: [['home'], []], wrap_tag: :li, class_active: 'public-nav-active', wrap_class: 'block py-2 px-3 text-white dark:text-gray-200 rounded-lg hover:bg-blue-500 hover:text-white'
        = active_link_to 'Products', products_path, active: [['products'], []], wrap_tag: :li, class_active: 'public-nav-active', wrap_class: 'block py-2 px-3 text-white dark:text-gray-200 rounded-lg hover:bg-blue-500 hover:text-white'
        = active_link_to 'Market Place', market_places_path, active: [['market_places'], []], wrap_tag: :li, class_active: 'public-nav-active', wrap_class: 'block py-2 px-3 text-white dark:text-gray-200 rounded-lg hover:bg-blue-500 hover:text-white'
        = active_link_to carts_path, active: [['carts'], []], wrap_tag: :li, class_active: 'public-nav-active', wrap_class: 'block py-2 px-3 text-white dark:text-gray-200 rounded-lg hover:bg-blue-500 hover:text-white', 'data-controller': 'root', 'data-root-target': 'link' do
          .flex
            %div.px-2 Cart
            %div.relative
              = heroicon 'shopping-cart', options: { class: "w-5 h-5" }
              %div.absolute.cart-count(data-cart-target="count") 0
        - unless current_user.present?
          %li 
            .block.py-2.px-3.text-gray-100.dark:text-gray-300.rounded-lg.hover:bg-blue-500.hover:text-white
              = link_to 'Sign in', new_user_session_path, data: { turbo_frame: 'global_modal_tag' }
          %li{style: "line-height: 0.5rem;"}
            %button#dark-mode-toggle.text-gray-800.hover:text-gray-400.dark:text-gray-200.hover:bg-blue-500.rounded-lg.px-2{ "data-controller": "theme"}
              %span.dark:hidden
                = heroicon 'moon', variant: :solid, options: { class: "w-6 h-6" }
              %span.hidden.dark:inline
                = heroicon 'sun', variant: :solid, options: { class: "w-6 h-6" }
        - else
          %li.ml-3{style: "line-height: 0.5rem;"}
            %button#dark-mode-toggle.text-white.hover:text-gray-100.dark:text-gray-200.hover:bg-blue-500.rounded-lg.px-2{ "data-controller": "theme"}
              %span.dark:hidden
                = heroicon 'moon', variant: :solid, options: { class: "w-6 h-6" }
              %span.hidden.dark:inline
                = heroicon 'sun', variant: :solid, options: { class: "w-6 h-6" }
          %li
            .flex.items-center
              .flex.items-center.ms-3
                %div
                  %button.flex.rounded-lg.focus:ring-4.focus:ring-orange-500.bg-white.dark:bg-gray-800.dark:text-gray-200.w-auto.h-10.p-2{"aria-expanded" => "false", "data-dropdown-toggle" => "dropdown-user", type: "button"}
                    = heroicon 'user-circle', variant: :solid, options: { class: "w-6 h-6 mr-1" }
                    %div= current_user.first_name
                    = heroicon 'chevron-down', variant: :solid, options: { class: "w-4 h-4 ml-1 mt-1" }
                #dropdown-user.z-50.hidden.my-4.text-base.list-none.bg-white.dark:bg-gray-800.divide-y.divide-gray-100.dark:divide-gray-600.rounded-lg.shadow
                  .px-4.py-3{role: "none"}
                    %p.text-sm.text-gray-900.dark:text-gray-200{role: "none"}
                      = current_user.full_name
                    %p.text-sm.font-medium.text-gray-900.dark:text-gray-400.truncate{role: "none"}
                      = current_user.email
                  %ul.py-1{role: "none"}
                    %li
                      .block.px-4.py-2.text-sm.text-gray-700.dark:text-gray-300.hover:bg-gray-100.dark:hover:bg-gray-600
                        = link_to user_path(current_user) do
                          = heroicon 'user-circle', variant: :solid, options: { class: "w-4 h-4 mr-1 inline-block" }
                          %span Profile
                    %li
                      .block.px-4.py-2.text-sm.text-gray-700.dark:text-gray-300.hover:bg-gray-100.dark:hover:bg-gray-600
                        = link_to orders_path do
                          = heroicon 'cube', variant: :solid, options: { class: "w-4 h-4 mr-1 inline-block" }
                          %span Orders
                    %li
                      .block.px-4.py-2.text-sm.text-gray-700.dark:text-gray-300.hover:bg-gray-100.dark:hover:bg-gray-600
                        = link_to orders_path do
                          = heroicon 'heart', variant: :solid, options: { class: "w-4 h-4 mr-1 inline-block" }
                          %span Wishlist
                    %li
                      .block.px-4.py-2.text-sm.text-gray-700.dark:text-gray-300.hover:bg-gray-100.dark:hover:bg-gray-600
                        = button_to destroy_user_session_path, method: :delete do
                          = heroicon 'arrow-up-tray', variant: :solid, options: { class: "w-4 h-4 mr-1 inline-block" }
                          %span Log Out
