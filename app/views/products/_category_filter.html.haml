%div{ data: { controller: "sidebar" } }
  %div.dark:text-gray-300.flex.items-center.justify-between.py-1.cursor-pointer.rounded.hover:bg-gray-300.dark:hover:bg-gray-800{ data: { action: "click->sidebar#toggle", sidebar_target: "toggle", is_root: root_cat ? "true" : "false" } }
    %span.text-sm
      = heroicon 'chevron-double-right', variant: :solid, options: {class: "w-6 h-6 inline-block text-green-500 hover:text-green-700"}
      = category[:name].humanize
    - if category[:children].any? || category[:products].any?
      %button.flex.items-center
        %svg.h-6.w-6.text-gray-400.ml-4.dark:text-gray-500{ xmlns: 'http://www.w3.org/2000/svg', viewBox: '0 0 20 20', fill: 'currentColor' }
          %path{ d: 'M6 8l4 4 4-4' }

  - if category[:products].any?
    %div.ml-8.hidden{ data: { sidebar_target: "children" } }
      - category[:products].each do |product_id, product_name|
        .flex.items-center
          = radio_button_tag 'product_id', product_id, params[:product_id] == product_id.to_s, id: "product_#{product_id}", class: "w-3 h-3 text-green-600 bg-gray-100 border-gray-300 focus:ring-green-500 dark:focus:ring-green-600 dark:ring-offset-gray-800 focus:ring-1 dark:bg-gray-700 dark:border-gray-600", data: {sidebar_target: "checkbox", filter_target: "filterinput" }
          %label.ml-4.text-sm.checkbox_label{:for => "product_#{product_id}", class: params[:product_id] == product_id.to_s ? "text-blue-500" : "text-gray-800 dark:text-gray-300"}= product_name

  - if category[:children].any?
    %div.ml-4.pl-2.hidden{ data: { sidebar_target: "children" } }
      - category[:children].each do |child|
        = render partial: 'category_filter', locals: { category: child, root_cat: false }