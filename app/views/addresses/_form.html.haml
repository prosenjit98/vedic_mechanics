= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation.p-4.m-4.border-2.border-red-400.rounded-lg
      %h2.text-red-500.text-lg.font-semibold= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul.p-4
        - @address.errors.full_messages.each do |message|
          %li= message

  .grid.grid-cols-1.md:grid-cols-2.gap-4.p-4
    %div.p-4.text-blue-500.text-lg.capitalize
      Add a New Address 

  .grid.grid-cols-1.md:grid-cols-2.gap-4.p-4
    %div
      = f.label :name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" do
        Name
        %span.text-red-500{class: "p-0"} *
      = f.text_field :name, autofocus: true, placeholder: "Name", required: true, class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

    %div
      = f.label :contact_number, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" do
        Contact Number
        %span.text-red-500{class: "p-0"} *
      = f.text_field :contact_number, placeholder: "Phone number", required: true, class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

  .grid.grid-cols-1.md:grid-cols-2.gap-4.p-4
    %div
      = f.label :address_line_1, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" do
        Address Line 1
        %span.text-red-500{class: "p-0"} *
      = f.text_field :address_line_1, placeholder: "Address line 1", required: true, class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

    %div
      = f.label :city, "City/Town Name", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100"
      = f.text_field :city, autocomplete: "city", required: true, class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

  .grid.grid-cols-1.md:grid-cols-2.gap-4.p-4
    %div
      = f.label :address_line_2, "District", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100"
      = f.text_field :address_line_2, placeholder: "District", class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

    %div
      = f.label :state, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100"
      = f.text_field :state, autocomplete: "state", required: true, class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

  .grid.grid-cols-1.md:grid-cols-2.gap-4.p-4
    %div
      = f.label :zip_code, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" do
        Pin Code
        %span.text-red-500{class: "p-0"} *
      = f.number_field :zip_code, autocomplete: "zip_code", required: true, class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

    %div
      %label.block.mb-2.text-sm.font-medium.text-gray-900.dark:text-gray-100{for: "address_type"}
        Select an Option
        %span.text-red-500{class: "p-0"} *
      = f.select :address_type, options_for_select(Address.address_types.collect { |k, v| [k.capitalize, k] }), { include_blank: "-------  Select Address Type  -------", required: true }, class: "bg-gray-50 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-200 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"

  .grid.grid-cols-1.p-4
    .flex.flex-row-reverse
      = link_to 'Cancel', addresses_path, class: "text-sm px-5 py-2 text-blue-500 bg-gray-100 hover:bg-gray-300 dark:bg-gray-700 dark:text-blue-300 rounded-lg ml-4 "
      = f.submit "Save", class: "text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2"

:javascript
  $(document).ready(function() {
    const pinCodeField = $("#address_zip_code");
    if (pinCodeField.length) {
      pinCodeField.on("blur", function() {
        const pinCode = $(this).val();
        if (pinCode.length === 6) {
          $.ajax({
            url: "/addresses/postal_code_details",
            method: "GET",
            data: { pin_code: pinCode },
            success: function(data) {
              if (data) {
                $("#address_city").val(data.city);
                $("#address_address_line_2").val(data.district);
                $("#address_state").val(data.state);
              } else {
                alert("Postal code details not found.");
              }
            },
            error: function() {
              alert("Error fetching postal code details.");
            }
          });
        } else {
          alert("Please enter a valid 6-digit pin code.");
        }
      });
    }
  });
