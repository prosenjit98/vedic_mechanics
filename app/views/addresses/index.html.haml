= render partial: "shared/breadcrumbs"
.grid.grid-cols-4.gap-4.px-24.pt-2.pb-8
  = render "users/profile_side_nav"
  .col-span-3.rounded-lg.border.p-2.bg-white.h-auto
    .p-4.text-bold.text-xl
      %div Mange Addresses
      %div.border-green.my-2.p-3.rounded-lg
        = turbo_frame_tag Address.new do
          = link_to new_address_path(for: "user_new_address") do
            = heroicon 'plus',variant: :solid , options: {class: "w-6 h-6 mr-1 inline-block text-green-500"} 
            %span.text-green-500.text-base Add New Address
      %div.border-green.rounded-lg
        = turbo_frame_tag "addresses" do
          - @addresses.each_with_index do |address, index|
            = render partial: "address", locals: {address: address, index: index}
      
