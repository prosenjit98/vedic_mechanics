= turbo_frame_tag "user-#{user.id}" do
  %div.bg-white.border-b.hover:bg-gray-50.flex
    %div.w-4.p-4.flex-1= user.id
    %div.px-6.py-4.text-gray-900.whitespace-nowrap.flex-1=user&.full_name
    %div.px-6.py-4.flex-1= user.email
    %div.px-6.py-4.flex-1= user.phone_number
    %div.px-6.py-4.flex-1= user.created_at.strftime("%d-%^b-%y")
    %div.px-6.py-4.flex-1= user.external_user_id
    %div.px-6.py-4.flex-1
      .flex.flex-row
        = link_to edit_admin_user_path(user), data: {turbo: true} do
          = heroicon 'pencil-square', variant: :solid, options: {class: "w-6 h-6 inline-block text-green-500 hover:text-green-700"}
        = button_to  admin_user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "ml-4" do
          = heroicon 'trash', variant: :solid, options: {class: "w-6 h-6 inline-block text-red-500 hover:text-red-800"}