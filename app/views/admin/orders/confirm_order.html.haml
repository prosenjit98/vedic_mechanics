= turbo_frame_tag "admin_modal" do
  %div{"data-controller" => "global-modal"}
    .overflow-y-auto.overflow-x-hidden.fixed.top-0.right-0.left-0.z-50.justify-center.items-center.w-full.md:inset-0.max-h-full{"aria-hidden" => "true", tabindex: "-1" , style:"background-color: rgba(0,0,0,0.6)", "data-global-modal-target" => "output"}
      .absolute.p-4.w-full.max-w-lg.max-h-full{style: "top: 50%; left: 50%; transform: translate(-50%, -50%);"}
        .relative.bg-white.rounded-lg.shadow
          .flex.items-center.justify-between.p-4.md:p-5.border-b.rounded-t
            %h3.text-lg.font-semibold.text-gray-600
              Add dimension & weight of Package
            %button.text-gray-400.bg-transparent.hover:bg-gray-200.hover:text-gray-900.rounded-lg.text-sm.w-8.h-8.ms-auto.inline-flex.justify-center.items-center.end-2.5{data: {action: "global-modal#close"}, type: "button"}
              %svg.w-3.h-3{"aria-hidden" => "true", fill: "none", viewbox: "0 0 14 14", xmlns: "http://www.w3.org/2000/svg"}
                %path{d: "m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6", stroke: "currentColor", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
              %span.sr-only Close modal
          .p-4.md:p-5
            .space-y-4
              = form_for(@order, url: update_confirmed_order_admin_order_path(@order), method: :patch, data: { turbo: false }) do |f|
                .grid.grid-cols-2.gap-2
                  %div
                    = f.label :length, class: "block mb-2 text-sm font-medium text-gray-900"
                    = f.text_field :length,autofocus: true, autocomplete: "first_name", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5", required: true, placeholder: "in c.m" 
                  %div 
                    = f.label :width,class: "block mb-2 text-sm font-medium text-gray-900"
                    = f.text_field :width, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5", required: true,placeholder: "in c.m" 
                .grid.grid-cols-2.gap-2
                  %div 
                    = f.label :height,class: "block mb-2 text-sm font-medium text-gray-900"
                    = f.text_field :height,class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5", required: true,placeholder: "in c.m" 
                  %div
                    = f.label :weight,class: "block mb-2 text-sm font-medium text-gray-900"
                    = f.text_field :weight,class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5", required: true, placeholder: "in gram"
                .flex.flex-row.justify-between.mt-6
                  = f.submit "Submit", class: "text-white bg-green-500 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center"
                  = link_to "cancel", admin_orders_path , class: "text-sm border border-gray-200 bg-gray-100 hover:bg-gray-300 rounded-2xl py-2 px-6"
              