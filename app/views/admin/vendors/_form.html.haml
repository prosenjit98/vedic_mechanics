= form_with(model: [:admin, @admin_vendor], data: {turbo: false}, class: "space-y-6") do |f|

  - if @admin_vendor.errors.any?
    #error_explanation.p-4.m-4.border-2.border-red-400.rounded-lg
      %h2.text-red-500.text-lg.font-semibold= "#{pluralize(@admin_vendor.errors.count, "error")} prohibited this vendor from being saved:"
      %ul.p-4
        - @admin_vendor.errors.full_messages.each do |message|
          %li= message

  .grid.grid-cols-1.gap-6
    .col-span-1
      %label.block.text-sm.font-medium.text-gray-700 Name
      %div.mt-1
        = f.text_field :name, class: "form-input block w-full border-gray-300 rounded-md shadow-sm"
    .col-span-1
      %label.block.text-sm.font-medium.text-gray-700 Address
      %div.mt-1
        = f.text_field :address, class: "form-input block w-full border-gray-300 rounded-md shadow-sm"
  .flex.justify-end
    = f.submit @admin_vendor.new_record? ? 'Create Vendor' : 'Edit Vendor', class: "btn bg-green-600 text-white px-4 py-2 rounded-md"