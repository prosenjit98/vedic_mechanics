= turbo_frame_tag "show_user" do
  .p-4.text-bold.text-xl.flex.flex-row
    %div Personal Information
  = form_for @user do |f|
    .grid.grid-cols-1.md:grid-cols-3.gap-4.p-4.border-t.border-gray-200.dark:border-gray-700
      .col-span-1
        = f.label :first_name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        = f.text_field :first_name, class: "bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500 block w-full p-2.5", required: true, autofocus: true
      .col-span-1
        = f.label :last_name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        = f.text_field :last_name, class: "bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500 block w-full p-2.5", required: true
      .col-span-1
      .col-span-1
        = f.label :email, "Email address", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        = f.email_field :email, class: "bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500 block w-full p-2.5", required: true
      .col-span-1
        = f.label :phone_number, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        = f.telephone_field :phone_number, class: "bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500 block w-full p-2.5", required: true
      .col-span-1
      .col-span-1
        = f.submit "Submit", class: "text-white bg-blue-500 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center"
        = link_to "Cancel", "", class: "text-sm px-5 text-center py-3 text-blue bg-gray-100 dark:text-gray-900 hover:bg-gray-300 mx-4 rounded-lg"
