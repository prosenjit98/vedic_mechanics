= render partial: "shared/breadcrumbs"
.grid.grid-cols-1.md:grid-cols-4.gap-4.px-4.md:px-24.py-8
  = render "profile_side_nav" 
  .col-span-1.md:col-span-3.rounded-lg.shadow.p-2.bg-white.dark:bg-gray-800.h-auto
    .p-4.font-bold.text-xl.flex.flex-row.text-gray-900.dark:text-gray-100
      %div Change Your Password
    = form_for current_user, url: update_password_users_path, method: :patch do |f|
      .grid.grid-cols-1.md:grid-cols-3.gap-4.p-4.border-t.dark:border-gray-700
        .col-span-1.mt-4
          = f.label :password, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
          = f.text_field :password, class: "bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", required: true, autofocus: true
        .col-span-1.mt-4
          = f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
          = f.text_field :password_confirmation, class: "bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", required: true
        .col-span-1.mt-10
          %div.hidden.mt-2.text-red-500#password-error Passwords do not match!
        .col-span-1.mt-4
          = f.submit "Submit", class: "text-white bg-blue-500 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center", id: "submit-password"
          = link_to "Cancel", "", class: "text-sm px-5 text-center py-3 text-blue bg-gray-100 dark:text-gray-900 hover:bg-gray-300 mx-4 rounded-lg"
:javascript
  $(document).ready(function() {
    $('#user_password_confirmation').on('blur', function() {
      var password = $('#user_password').val();
      var passwordConfirmation = $(this).val();
      var errorDiv = $('#password-error');
      var submitBtn = $('#submit-password');

      if (password !== passwordConfirmation) {
        errorDiv.removeClass('hidden');
        submitBtn.addClass('hidden');
      } else {
        errorDiv.addClass('hidden');
        submitBtn.removeClass('hidden');
      }
    });
  });
